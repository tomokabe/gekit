<div class="contents row">
  <%= form_tag("/kouens/#{@kouen.id}/reviews/", method: :post) do %>
    <div class="bigbox">
    <img src="<%= @kouen.image_url %>" width="130" height=" 150" align="left">
    <a href="#"><Div Align="right"><%= @kouen.area %></Div></a>
    <big><strong><%= @kouen.title %></strong></big><br>
    <a href="#"><Div Align="right"><%= @kouen.gekidan %></Div></a>
    <strong>脚本</strong> <%= @kouen.writer %><br>
    <strong>演出</strong> <%= @kouen.director %><br><br>
    <big><strong><%= @kouen.nichiji %></strong></big>

      <br clear="left">
      <h3>レビューを投稿する</h3>
      <br clear="left">
      <input placeholder="タイトル" type="text" name="title">
      <br clear="left">
      <textarea cols="30" name="review" placeholder="本文" rows="10"></textarea>
      <br clear="left">
      <input type="submit" value="SENT">
    </div>
  <% end %>
</div>