                <option value="3">歌舞伎・伝統芸能</option>
                <option value="4">ミュージカル</option>
                <option value="5">オペラ</option>
                <option value="6">その他</option>
                </select></td>
                </tr>
              <% end %>
              <form accept-charset="utf-8" action="/" class="js-search-submit" method="get">
              </form>
            </div>
          </article>
<br><br><br>
                <h3>検索結果</h3>
              </header>


